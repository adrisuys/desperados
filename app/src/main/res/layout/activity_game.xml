<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FF9B50"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bossA_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/highlight_boss"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/fluo">

                <ImageView
                    android:id="@+id/boss_A_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="BOSS" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ladyA_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/highlight_lady"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/fluo">

                <ImageView
                    android:id="@+id/lady_A_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="LADY" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/badA_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/highlight_bad"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/fluo">

                <ImageView
                    android:id="@+id/bad_A_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="BAD" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FF9B50"
        android:gravity="center">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uglyA_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/highlight_ugly"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/fluo">

                <ImageView
                    android:id="@+id/ugly_A_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="UGLY" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brainA_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/highlight_brain"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/fluo">

                <ImageView
                    android:id="@+id/brain_A_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="BRAIN" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/gangAmoney"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/money_chips_red"
            android:fontFamily="@font/western"
            android:text="0$"
            android:textColor="#fff"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/poker_table"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/dice1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/unlocked_dice"
                    android:onClick="onClickDice"
                    android:tag="0" />

                <ImageView
                    android:id="@+id/dice2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/unlocked_dice"
                    android:onClick="onClickDice"
                    android:tag="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/dice3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/unlocked_dice"
                    android:onClick="onClickDice"
                    android:tag="2"></ImageView>

                <ImageView
                    android:id="@+id/dice4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/unlocked_dice"
                    android:onClick="onClickDice"
                    android:tag="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:fontFamily="@font/western"
                    android:onClick="rollDices"
                    android:text="ROLL"
                    android:textColor="#fff" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:fontFamily="@font/western"
                    android:onClick="stopRollingDices"
                    android:text="STOP"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/wood"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="BANK"
                android:textColor="#000"
                android:textSize="40dp" />

            <Button
                android:id="@+id/bank"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/money_chips_yellow"
                android:fontFamily="@font/western"
                android:text="100$"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FF9B50"
        android:gravity="center">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uglyB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/ugly_B_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="UGLY" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brainB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/brain_B_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="BRAIN" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/gangBmoney"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/money_chips_blue"
            android:fontFamily="@font/western"
            android:text="50$"
            android:textColor="#fff"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FF9B50"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bossB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/boss_B_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="BOSS" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ladyB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/lady_B_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="LADY" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/badB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/bad_B_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="BAD" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF9B50"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#41210D" />

        <TextView
            android:id="@+id/ai_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/western"
            android:text="AI Actions: "
            android:textAlignment="center"
            android:textColor="#41210D"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>