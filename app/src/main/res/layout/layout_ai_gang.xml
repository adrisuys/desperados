<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/playground_brown_material"
        android:gravity="center">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uglyB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:textColor="#FFF"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/ugly_B_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="UGLY" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brainB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:textColor="#FFF"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/brain_B_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="BRAIN" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/gangBmoney"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/money_chips_blue"
            android:fontFamily="@font/western"
            android:text="50$"
            android:textColor="#fff"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/playground_brown_material"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bossB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/boss_B_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="BOSS" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ladyB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:text="NAME"
                android:textColor="#FFF"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/lady_B_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="LADY" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/badB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/western"
                android:textColor="#FFF"
                android:text="NAME"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/bad_B_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="onClickCharacter"
                    android:tag="BAD" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</merge>